<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_16"
    android:paddingHorizontal="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_16">

    <ImageView
        android:id="@+id/ivIconActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCoefficient"
        tools:src="@drawable/ic_average_activity" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCoefficient"
        style="@style/Text.Blue.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/ivIconActivity"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1200" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        style="@style/Text.LightGray.12"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivIconActivity"
        app:layout_constraintTop_toBottomOf="@id/tvCoefficient"
        tools:text="Для малоподвижных людей, тренировок мало или они отсутствуют" />

</androidx.constraintlayout.widget.ConstraintLayout>
