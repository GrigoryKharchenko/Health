<resources>
    <!-- Base application theme. -->
    <style name="Theme.Health" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" />

    <style name="Text.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Blue.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.LightGray">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="Text.LightGray.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.LightGray.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text.Black.18.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
    </style>

    <style name="TitleToolbar.TextWhite">
        <item name="titleTextColor">@color/background_color</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="EditTextBg">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="RadioButtonBlueBg">
        <item name="buttonTint">@color/blue</item>
    </style>
</resources>
